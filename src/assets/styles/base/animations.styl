.fade {
  &-enter-from,
  &-leave-to {
    opacity: 0;
  }

  &-enter-to,
  &-leave-from {
    opacity: 1;
  }

  &-enter-active,
  &-leave-active {
    transition: opacity 0.5s ease-in-out;
  }
}

.move {
  &-item {
    z-index: 1;
    transition: all 0.5s ease;
  }

  &-enter-from,
  &-leave-to {
    opacity: 0;
    transform: scale(0.8);
  }

  &-leave-to {
    transform: scale(0);
  }

  &-enter-to,
  &-leave-from {
    opacity: 1;
  }

  &-leave-active {
    position: absolute;
    transition: all 0.3s ease;
  }
}

.bubble {
  &-enter-active,
  &-leave-active {
    transition: all 0.5s ease-in-out;
  }

  &-enter-from,
  &-leave-to {
    opacity: 0;
    transform: translateY(10px);
  }

  &-enter-to,
  &-leave-from {
    opacity: 1;
    transform: translateY(0px);
  }
}

.slide {
  &-right,
  &-left {
    &-enter-to,
    &-leave-from {
      transform: translateX(0);
    }

    &-enter-active,
    &-leave-active {
      transition: transform 0.5s ease-in-out;
    }
  }
  
  &-right {
    &-enter-from {
      transform: translateX(-100%);
    }
    &-leave-to {
      transform: translateX(100%);
    }
  }
  &-left {
    &-enter-from {
      transform: translateX(100%);
    }
    &-leave-to {
      transform: translateX(-100%);
    }
  }
}

.slide-fade,
.page-slide-fade {
  &-enter,
  &-leave-to {
    transform: translateX(30px);
    opacity: 0;
  }

  &-enter-active {
    transition: all 0.5s ease;
  }

  &-leave-active {
    transition: all 0.3s ease;
  }
}

.slide-fade-auth {
  &-enter,
  &-leave-to {
    transform: translateX(30px);
    opacity: 0;
  }

  &-enter-active {
    transition: all 1s ease;
  }

  &-leave-active {
    transition: all 0s cubic-bezier(1, 0.5, 0.8, 1);
  }
}

.fade-blur {
  &-enter-from,
  &-leave-to {
    opacity: 0;
  }
  &-enter-to,
  &-leave-from {
    opacity: 1;
    backdrop-filter: blur(20px);
  }

  &-enter-active,
  &-leave-active {
    transition: all 0.5s ease-in-out;
  }
}